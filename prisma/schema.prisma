generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Budget {
  id        String  @id @default(uuid())
  name      String
  amount    Int
  icon      String?
  createdBy String

  expenses Expense[]
}

model Expense {
  id            String @id @default(uuid())
  name          String
  expenseAmount Int

  createdAt DateTime @default(now())

  budgetId String
  budget   Budget @relation(fields: [budgetId], references: [id])
}
